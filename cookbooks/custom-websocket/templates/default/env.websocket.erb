export application="<%= @app %>"
export DEPLOY_FILE="/data/${application}/current/REVISION"
export shared_path="/data/${application}/shared"
export current_path="/data/${application}/current"
export pid_directory="/var/run/engineyard/${application}"
export log_directory="/var/log/engineyard/apps/${application}"
export framework_env="<%= @environment %>"
export PATH="/data/${application}/current/ey_bundler_binstubs:$PATH"
export puma_options=""

# Monit can take these away; forcing them to stay.
export LANG=en_US.utf8
export SHELL="/bin/bash"
if [ "${APP_USER}" = "" ]; then
  APP_USER=`stat -c"%U" /data/${application}/current`
fi
INLINEDIR=/tmp/inline_$$; export INLINEDIR
HOME=`eval "dirname ~${APP_USER}/."` ; export HOME
USER=${APP_USER}; export USER
NEWRELIC_DISPATCHER=puma; export NEWRELIC_DISPATCHER
